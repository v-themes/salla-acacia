<section class="perfumes-group bg-secondary-color mt-12">
    <div class="container bg-white py-8 sm:py-12 md:px-12 flex flex-wrap item-baseline md:items-center justify-between gap-4 px-2 {{ component.is_direcation ? "flex-row-reverse" : "flex-row"}} ">  
        <div class="w-[100%] md:w-[35%] order-2 md:order-1 text-center">
            <span class="text-primary inline-block mb-[.7rem] text-[20px]">{{ component.sub_title }}</span>
            <h2 class="text-[25px] md:text-[30px] lg:text-[40px] font-semibold mb-[.8rem] md:leading-[50px]">{{ component.group_title }}</h2>
            <p class="text-[20px] text-[#707070] pt-[1rem] leading-snug mb-10 md:mb-8">{{ component.group_description }}</p>
            <a href="{{ component.group_url }}" class="btns-style-main">{{ component.url_title }}</a>
        </div>
        <div class="relative flex justify-center {{ component.is_direcation ? "md:justify-start":"md:justify-end"}} w-[100%] md:w-[40%] order-1 md:order-2">
            <img alt="{{ component.sub_title }}" width="100%" height="100%" src="{{ component.group_image}}" class="lazy max-w-[100%] object-contain ">
            <span class="absolute bottom-0 text-primary text-[38px] inline-block height-[218px] leading-[218px] {{ component.is_direcation ? "-left-[22px] rotate-[45deg]":"-right-[22px] -rotate-[45deg]"}} ">{{ component.category_name}}</span> 
        </div>
    </div>
</section>